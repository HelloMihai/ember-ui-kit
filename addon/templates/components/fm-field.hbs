{{yield
  (hash
    text=(component "in-text" value)
    toggle=(component "in-toggle" value)
  )
}}

{{#if validation}}
  <ul class="fm-field__validation-messages">
    {{#each (get model (concat "validations.attrs." valuePath ".messages")) as |message|}}
      <li>{{message}}</li>
    {{/each}}
  </ul>
{{/if}}
